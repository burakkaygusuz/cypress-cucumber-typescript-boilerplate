{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": ["cypress", "node"],
    "outDir": "/dist"
  },
  "include": ["**/*.ts", "cypress.report.js"],
  "exclude": ["node_modules"]
}
